@using HiFi.Dto
@model List<HiFi.Dto.SetupDto>

<div class="nav-wrapper position-relative end-0">
    <ul class="nav nav-pills nav-fill mb-3" id="pills-inner-tab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="pills-setups-tab" data-toggle="pill" href="#pills-setups" role="tab" aria-controls="pills-setups" aria-selected="true">Sistemler</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-components-tab" data-toggle="pill" href="#pills-components" role="tab" aria-controls="pills-components" aria-selected="false">Parçalar</a>
        </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-setups" role="tabpanel" aria-labelledby="pills-setups-tab">
            <div class="container my-3 mx-auto shadow">
                <div id="divSetupSetting">
                    @Html.Action("setups", "ProfileSettings")
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="pills-components" role="tabpanel" aria-labelledby="pills-components-tab">
            <div class="container my-3 shadow">
                @Html.Action("components", "ProfileSettings")
            </div>
        </div>
    </div>
    <script>
        $('#pills-inner-tab').on('click',
            function (e) {
                e.preventDefault(),
                    $(this).tab('show');
            });
    </script>
</div>
