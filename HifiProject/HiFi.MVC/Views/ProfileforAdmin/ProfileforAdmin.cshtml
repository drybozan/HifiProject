
@{
    ViewBag.Title = "ProfileforAdmin";
    Layout = "~/Views/Shared/_LayoutForAdmin.cshtml";
}

@model HiFi.Dto.MemberDto
<div class="container-fluid px-2 px-md-4">
    <div class="page-header min-height-300 border-radius-xl mt-4" style="background-image: url('https://images.unsplash.com/photo-1531512073830-ba890ca4eba2?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80');">
        <span class="mask  bg-gradient-primary  opacity-6"></span>
    </div>
    <div class="card card-body mx-3 mx-md-4 mt-n6">
        <div class="row gx-4 mb-2">
            <div class="col-auto">
                <div class="avatar avatar-xl position-relative">
                    @if (Model.ProfilePicture != null)
                    {
                        <img src="http://localhost:51075/Uploads/Profile/@Model.ProfilePicture" alt="profile_image" class="w-100 border-radius-lg shadow-sm">
                    }
                    @if (Model.ProfilePicture == null)
                    {
                        <img src="~/template/assets/img/bruce-mars.jpg" alt="profile_image" class="w-100 border-radius-lg shadow-sm">
                    }
                </div>
            </div>
            <div class="col-auto my-auto">
                <div class="h-100">
                    <h5 class="mb-1">
                        @Model.MemberName &nbsp; @Model.MemberSurname
                    </h5>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="row">
                @*kullanıcının hakkında bilgi verdiği kısım*@
                <div class="col-12 col-xl-12">
                    <div class="card card-plain h-100">
                        <div class="card-header pb-0 p-3">
                            <div class="row">
                                <div class="col-md-8 d-flex align-items-center">
                                    <h6 class="mb-0">Hakkımda</h6>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-3">

                            <p class="text-sm">
                                @Model.ProfileDetail
                            </p>
                            <hr class="horizontal gray-light my-4">
                            <ul class="list-group">
                                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Mobile:</strong> &nbsp; @Model.MemberPhone</li>
                                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Email:</strong> &nbsp; @Model.Mail</li>
                            </ul>
                        </div>
                    </div>
                </div>
                @*kullanıcının setuplarını tanıttığı kısım*@
                <div class="col-12 mt-4">
                    <div class="mb-5 ps-3">
                        <h6 class="mb-1">HİFİ SETUP</h6>
                    </div>
                    @Html.Action("SetupPartial", "Profile", new { id = @Model.MemberId })
                </div>
            </div>
        </div>
    </div>
</div>


