
@{
    ViewBag.Title = "Giriş Yap";
    Layout = "~/Views/Shared/_HomePageLayout.cshtml";
}
@using HiFi.Common.Helpers
@model HiFi.Dto.MemberDto

@if (ViewBag.Message != null)
{
    <script type="text/javascript">

        window.onload = function () {
            Swal.fire({
                icon: 'error',
                title: 'Giriş yapılamadı!',
                text: '@ViewBag.Message'
            });
        };
    </script>
}
@if (ViewBag.Msg != null)
{
    <script type="text/javascript">

        window.onload = function () {
            Swal.fire({
                icon: 'info',
                title: 'Giriş yapılamadı!',
                text: '@ViewBag.Msg'
            });
        };
    </script>
}
<main class="main-content  mt-0">
    <div class="page-header align-items-start min-vh-100" style="background-image: url('https://images.unsplash.com/photo-1497294815431-9365093b7331?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1950&q=80');">
        <span class="mask bg-gradient-dark opacity-6"></span>
        <div class="container my-auto mt-8">
            <div class="row">
                <div class="col-lg-4 col-md-8 col-12 mx-auto">
                    <div class="card z-index-0 fadeIn3 fadeInBottom">
                        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                            <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
                                <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">GİRİŞ YAP</h4>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="text-start">
                                @using (Html.BeginForm("Signin", "Signin", FormMethod.Post))
                                {
                                    <div class="input-group input-group-outline my-3">
                                        @Html.TextBoxForControl(m => m.Username, new { placeholder = "Kullanıcı Adı" })
                                    </div>
                                    <div class="input-group input-group-outline mb-3">
                                        @Html.PasswordControlClassic(m => m.Password, new { placeholder = "Şifre" })
                                    </div>
                                    <div class="text-center">
                                        <input type="submit" class="btn bg-gradient-primary w-100 my-4 mb-2" value="GİRİŞ Yap" />
                                    </div>
                                }
                                <p class="mt-4 text-sm text-center">
                                    <a href="/Signin/ForgotPassword" class="font-weight-bold">Şifremi Unuttum</a>
                                </p>
                                <p class="mt-4 text-sm text-center">
                                    Hesabın yok mu?
                                    <a href="/Signup/Signup" class="text-primary text-gradient font-weight-bold">KAYIT OL</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
