
@{
    ViewBag.Title = "Kayıt Ol";
    Layout = "~/Views/Shared/_HomePageLayout.cshtml";
}

@using HiFi.Common.Helpers
@model HiFi.Dto.Dtos.ApplicationDto

<main class="main-content  mt-0">
    <div class="page-header align-items-start min-vh-100" style="background-image: url('https://images.unsplash.com/photo-1497294815431-9365093b7331?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1950&q=80');">
        <span class="mask bg-gradient-dark opacity-6"></span>
        <div class="container my-auto mt-7">
            <div class="row">
                <div class="col-lg-4 col-md-8 col-12 mx-auto">
                    <div class="card z-index-0 fadeIn3 fadeInBottom">
                        <div class="card-header">
                            <h4 class="text-primary text-gradient font-weight-bold text-center">Kayıt Talebi</h4>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("SignUp", "Signup", FormMethod.Post))
                            {
                                <div class="input-group input-group-outline mb-3">
                                    @(Html.TextBoxForControl(m => m.AppName, new { placeholder = "Ad" }))
                                </div>
                                <div class="input-group input-group-outline mb-3">
                                    @(Html.TextBoxForControl(m => m.AppSurname, new { placeholder = "Soyad" }))
                                </div>
                                <div class="input-group input-group-outline mb-3">
                                    @(Html.TextBoxForControl(m => m.Phone, new { placeholder = "Telefon No" }))
                                </div>
                                <div class="input-group input-group-outline mb-3">
                                    @(Html.TextBoxForControl(m => m.Username, new { placeholder = "Kullanıcı Adı" }))
                                </div>
                                <div class="input-group input-group-outline mb-3">
                                    @(Html.EMailControl(m => m.Mail))
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0">Kayıt Talebİ Oluştur</button>
                                </div>
                            }
                        </div>
                        <div class="card-footer text-center pt-0 px-lg-2 px-1">
                            <p class="mb-2 text-sm mx-auto">
                                Hesabın zaten var mı?
                                <a href="/Signin/Signin" class="text-primary text-gradient font-weight-bold">Giriş Yap</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@if (ViewBag.App1 != null)
{
    <script type="text/javascript">

        window.onload = function () {
            Swal.fire('Hata',
                '@ViewBag.App2', 'error');
        };
    </script>
}
@if (ViewBag.App2 != null)
{
    <script type="text/javascript">

        window.onload = function () {
            Swal.fire('İşlem Başarılı',
                '@ViewBag.App2', 'success');
        };
    </script>
}